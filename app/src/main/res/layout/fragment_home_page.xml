<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/fragment_home_linear"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <fragment
            android:name="com.Fragment.Fragment_banner"
            android:id="@+id/fragment_home_banner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
        <fragment
            android:name="com.Fragment.Fragment_playlist"
            android:id="@+id/fragment_home_playlist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
        <fragment
            android:name="com.Fragment.Fragment_themestyle"
            android:layout_width="match_parent"
            android:id="@+id/fragment_home_styletheme"
            android:layout_height="wrap_content"/>
        <fragment
            android:name="com.Fragment.Fragment_album"
            android:layout_width="match_parent"
            android:id="@+id/fragment_home_album"
            android:layout_height="wrap_content"/>
        <fragment
            android:name="com.Fragment.Fragment_song"
            android:layout_width="match_parent"
            android:id="@+id/fragment_home_songlike"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</ScrollView>