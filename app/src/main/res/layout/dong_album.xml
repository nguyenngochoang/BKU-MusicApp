<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    app:cardCornerRadius="10dp">
    <LinearLayout
        android:id="@+id/dong_album_fulllinear"
        android:layout_width="wrap_content"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_gravity="center"
            android:scaleType="fitXY"
            android:id="@+id/dong_album_imagealbum"
            android:layout_width="200dp"
            android:layout_height="200dp" />
        <TextView
            android:textColor="#000000"
            android:textStyle="bold"
            android:maxWidth="200dp"
            android:textSize="20sp"
            android:ellipsize="end"
            android:maxLines="1"

            android:id="@+id/dong_album_namealbum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ten album"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"/>
        <TextView
            android:maxWidth="200dp"
            android:textSize="20sp"
            android:textColor="#9e9797"
            android:ellipsize="end"
            android:maxLines="1"
            android:id="@+id/dong_album_namesinglealbum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="minh nhut"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"/>
    </LinearLayout>

</android.support.v7.widget.CardView>