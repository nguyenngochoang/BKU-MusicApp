<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:elevation="5dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:padding="10dp"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/dong_songlist_index"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:layout_margin="15dp"
            android:text="1"/>
        <TextView
            android:id="@+id/dong_songlist_namesong"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:textColor="#030303"
            android:ellipsize="end"
            android:maxWidth="250dp"
            android:textSize="20sp"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/dong_songlist_index"
            android:text="NGo minh nhut"
            />
        <TextView
            android:text="Ngo minh nhut"
            android:id="@+id/dong_songlist_singer"
            android:singleLine="true"
            android:textColor="#979797"
            android:ellipsize="end"
            android:layout_below="@id/dong_songlist_namesong"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/dong_songlist_index"
            android:maxWidth="250dp"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:src="@drawable/theredot"
            android:layout_marginRight="5dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:id="@+id/dong_songlist_likeimg"
            android:layout_width="30dp"
            android:layout_height="50dp" />
        
    </RelativeLayout>

</android.support.v7.widget.CardView>