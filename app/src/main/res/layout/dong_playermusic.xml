<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:layout_margin="10dp"
            android:id="@+id/dong_playermusic_index"

            android:textColor="#ffff"
            android:textSize="17sp" />
        <TextView
            android:id="@+id/dong_playermusic_name"
            android:ellipsize="end"
            android:textSize="17sp"
            android:textColor="#ffff"
            android:maxWidth="250dp"
            android:maxLines="1"
            android:text="Minh Nhut"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/dong_playermusic_index"/>
        <TextView
            android:id="@+id/dong_playermusic_singer"
            android:textSize="12sp"
            android:textColor="#ffff"
            android:layout_marginLeft="10dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:layout_below="@id/dong_playermusic_name"
            android:layout_toRightOf="@id/dong_playermusic_index"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>

</RelativeLayout>