<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:scaleType="fitXY"
        android:id="@+id/dong_banner_background"
        android:layout_width="wrap_content"
        android:layout_height="200dp" />
    <View
        android:background="@drawable/custom_background_banner"
        android:layout_width="match_parent"
        android:layout_height="200dp"/>
    <RelativeLayout
        android:id="@+id/dong_banner_allcontext"
        android:layout_alignBottom="@id/dong_banner_background"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/dong_banner_imagesong"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:padding="2dp"
            android:layout_margin="15dp"
            />

        <TextView
            android:textStyle="bold"
            android:text="Lo yeu mat roi"
            android:textColor="#ffffff"
            android:textSize="17sp"
            android:id="@+id/dong_banner_namesong"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/dong_banner_imagesong"
            android:layout_toRightOf="@id/dong_banner_imagesong"
            android:layout_marginTop="10dp" />
        <RelativeLayout
            android:id="@+id/dong_banner_contextdecription"
            android:layout_below="@id/dong_banner_namesong"
            android:layout_toRightOf="@id/dong_banner_imagesong"

            android:layout_marginTop="7dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/dong_banner_textcontextdecription"
                android:textColor="#fffdfc"
                android:text="chao ban"
                android:layout_marginRight="40dp"
                android:maxLines="2"
                android:textSize="13sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        
    </RelativeLayout>

</RelativeLayout>