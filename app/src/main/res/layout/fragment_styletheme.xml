<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
    <RelativeLayout
        android:id="@+id/fragment_styletheme_titleall"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView

            android:id="@+id/fragment_styletheme_title"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:paddingLeft="20dp"
            android:textSize="20sp"
            android:textColor="#3b3e3d"
            android:textStyle="bold"

            android:text="@string/featruetheme"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/fragment_styletheme_more"
            android:text="@string/more"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:paddingRight="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"/>

    </RelativeLayout>
    <HorizontalScrollView
        android:scrollbars="none"
        android:id="@+id/fragment_styletheme_horizontalscrollview"
        android:layout_below="@id/fragment_styletheme_titleall"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></HorizontalScrollView>

</RelativeLayout>