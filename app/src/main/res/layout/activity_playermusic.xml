<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="10"
    android:background="#9E9D24"
    tools:context="com.Activity.Playermusic">
    <android.support.v7.widget.Toolbar
        android:id="@+id/activity_playmusic_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"></android.support.v7.widget.Toolbar>
    <android.support.v4.view.ViewPager
        android:id="@+id/activity_playmusic_viewpager"
        android:layout_width="match_parent"
        android:layout_weight="8"
        android:layout_height="0dp">

    </android.support.v4.view.ViewPager>
    <LinearLayout
        android:orientation="vertical"
        android:layout_weight="2"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <LinearLayout
            android:weightSum="10"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_weight="0.5"
                android:textSize="16sp"
                android:text="00:00"
                android:id="@+id/activity_playmusic_curtime"
                android:textColor="#ffff"
                android:textStyle="bold"/>
            <SeekBar
                android:layout_weight="9"
                android:id="@+id/activity_playmusic_seekbar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_weight="0.5"
                android:textSize="16sp"
                android:text="00:00"
                android:id="@+id/activity_playmusic_songtime"
                android:textColor="#ffff"
                android:textStyle="bold"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">
            <ImageButton
                android:id="@+id/activity_playmusic_suffle"
                android:layout_marginRight="15dp"
                android:background="@null"
                android:scaleType="fitXY"
                android:src="@drawable/iconsuffle"
                android:layout_width="50dp"
                android:layout_height="50dp" />
            <ImageButton
                android:id="@+id/activity_playmusic_preview"
                android:layout_marginRight="15dp"
                android:background="@null"
                android:scaleType="fitXY"
                android:src="@drawable/iconpreview"
                android:layout_width="60dp"
                android:layout_height="60dp" />
            <ImageButton
                android:id="@+id/activity_playmusic_play"
                android:layout_marginRight="15dp"
                android:background="@null"
                android:scaleType="fitXY"
                android:src="@drawable/iconplay"
                android:layout_width="70dp"
                android:layout_height="70dp" />
            <ImageButton
                android:id="@+id/activity_playmusic_next"
                android:layout_marginRight="15dp"
                android:background="@null"
                android:scaleType="fitXY"
                android:src="@drawable/iconnext"
                android:layout_width="60dp"
                android:layout_height="60dp" />
            <ImageButton
                android:id="@+id/activity_playmusic_repeat"
                android:layout_marginRight="15dp"
                android:background="@null"
                android:scaleType="fitXY"
                android:src="@drawable/iconrepeat"
                android:layout_width="50dp"
                android:layout_height="50dp" />

        </LinearLayout>
    </LinearLayout>

</LinearLayout>
