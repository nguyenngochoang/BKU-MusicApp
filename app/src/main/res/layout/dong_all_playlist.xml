<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="5dp">
    <FrameLayout
        android:id="@+id/dong_all_playlist_frame"
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:layout_height="wrap_content">
        <ImageView
            android:scaleType="centerCrop"
            android:src="@drawable/ic_launcher_background"
            android:layout_width="180dp"
            android:id="@+id/dong_all_playlist_imageview"
            android:layout_height="180dp" />

    </FrameLayout>
    <TextView
        android:textSize="15sp"
        android:textColor="#c20a0a"
        android:text="Nhac buon"
        android:id="@+id/dong_all_playlist_nameplaylist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxWidth="200dp"
        android:lines="2"
        android:maxLines="2"
        android:ellipsize="end"
        android:gravity="left"
        />
    <TextView
        android:id="@+id/dong_all_playlist_artist"
        android:textSize="13sp"
        android:maxLines="1"
        android:ellipsize="end"
        android:text="Various Artists"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />

</LinearLayout>